{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.redlyai.desktop",
  "productName": "RedlyAI",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "publish": {
    "provider": "github",
    "owner": "YOUR_GITHUB_USERNAME",
    "repo": "RedlyEA",
    "releaseType": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/favicon.ico",
    "!node_modules/.cache",
    "!**/*.map",
    "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
    "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
    "!**/node_modules/*.d.ts",
    "!**/node_modules/.bin"
  ],
  "asarUnpack": ["electron/**/*"],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "fileAssociations": [
    {
      "ext": "eapkg",
      "name": "EA Repository Package",
      "description": "Enterprise Architecture Repository",
      "mimeType": "application/x-eapkg",
      "icon": "build/icons/eapkg-icon",
      "role": "Editor"
    }
  ],
  "icon": "build/icons/icon",
  "win": {
    "target": ["nsis", "portable"],
    "icon": "build/icons/icon.ico",
    "fileAssociations": [
      {
        "ext": "eapkg",
        "name": "EA Repository Package",
        "description": "Enterprise Architecture Repository",
        "icon": "build/icons/eapkg-icon.ico",
        "role": "Editor"
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "perMachine": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "RedlyAI Architecture Studio"
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "build/icons/icon.icns",
    "category": "public.app-category.developer-tools",
    "fileAssociations": [
      {
        "ext": "eapkg",
        "name": "EA Repository Package",
        "description": "Enterprise Architecture Repository",
        "icon": "build/icons/eapkg-icon.icns",
        "role": "Editor"
      }
    ]
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "build/icons/icon.png",
    "category": "Development",
    "fileAssociations": [
      {
        "ext": "eapkg",
        "name": "EA Repository Package",
        "description": "Enterprise Architecture Repository Package",
        "mimeType": "application/x-eapkg"
      }
    ]
  }
}
