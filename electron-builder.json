{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.redlyai.desktop",
  "productName": "RedlyAI",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "publish": {
    "provider": "github",
    "owner": "aniruddhkadam7",
    "repo": "RedlyEA"
  },
  "files": [
    {
      "from": ".",
      "to": ".",
      "filter": [
        "dist/**/*",
        "electron/**/*",
        "public/favicon.ico",
        "node_modules/**/*",
        "package.json"
      ]
    }
  ],
  "extraFiles": [
    {
      "from": "dist",
      "to": "dist",
      "filter": ["**/*"]
    },
    {
      "from": "electron",
      "to": "electron",
      "filter": ["**/*"]
    }
  ],
  "asarUnpack": ["electron/**/*"],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "fileAssociations": [
    {
      "ext": "eapkg",
      "name": "EA Repository Package",
      "description": "Enterprise Architecture Repository",
      "mimeType": "application/x-eapkg",
      "icon": "build/icons/eapkg-icon",
      "role": "Editor"
    }
  ],
  "icon": "build/icons/icon",
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icons/icon.ico",
    "certificateFile": null,
    "certificatePassword": null,
    "signingHashAlgorithms": ["sha256"],
    "fileAssociations": [
      {
        "ext": "eapkg",
        "name": "EA Repository Package",
        "description": "Enterprise Architecture Repository",
        "icon": "build/icons/eapkg-icon.ico",
        "role": "Editor"
      },
      {
        "ext": "redly",
        "name": "Redly Repository File",
        "description": "Redly Repository File",
        "icon": "build/icons/icon.ico",
        "role": "Editor"
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "perMachine": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "RedlyAI Architecture Studio",
    "artifactName": "${productName}-${version}-Setup.${ext}",
    "installerIcon": "build/icons/icon.ico",
    "uninstallerIcon": "build/icons/icon.ico",
    "installerHeader": "build/icons/icon.ico",
    "installerSidebar": "build/icons/icon.ico"
  }
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "build/icons/icon.icns",
    "category": "public.app-category.developer-tools",
    "fileAssociations": [
      {
        "ext": "eapkg",
        "name": "EA Repository Package",
        "description": "Enterprise Architecture Repository",
        "icon": "build/icons/eapkg-icon.icns",
        "role": "Editor"
      }
    ]
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "build/icons/icon.png",
    "category": "Development",
    "fileAssociations": [
      {
        "ext": "eapkg",
        "name": "EA Repository Package",
        "description": "Enterprise Architecture Repository Package",
        "mimeType": "application/x-eapkg"
      }
    ]
  }
}
